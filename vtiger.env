# ==========================================
# CONFIGURACIÓN GENERAL DEL PROYECTO
# ==========================================
PROJECT_NAME=vtiger_crm
DOMAIN_NAME=mydomain.com
SSL_EMAIL=admin@mydomain.com

# ==========================================
# VERSIONES DE SOFTWARE
# ==========================================
# Vtiger 8.4 es compatible con PHP 8.1 o 8.2
PHP_VERSION=8.1
NGINX_VERSION=alpine
MARIADB_VERSION=10.11
VTIGER_VERSION=8.4.0
# Enlace directo o estable de SourceForge para Vtiger 8.4.0
VTIGER_DOWNLOAD_URL=https://sourceforge.net/projects/vtigercrm/files/vtiger%20CRM%208.4.0/Core%20Product/vtigercrm8.4.0.tar.gz/download

# ==========================================
# BASE DE DATOS
# ==========================================
DB_ROOT_PASSWORD=SuperSecureRootPassword!2025
DB_DATABASE=vtigercrm
DB_USER=vtiger_user
DB_PASSWORD=SuperSecureVtigerSecurePassword!2025
DB_HOST=db

# ==========================================
# CONFIGURACIÓN PHP (Optimizada Vtiger)
# ==========================================
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=600
PHP_UPLOAD_MAX_FILESIZE=100M
PHP_POST_MAX_SIZE=100M
PHP_MAX_INPUT_VARS=10000
TIMEZONE=America/New_York
